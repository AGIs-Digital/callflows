# Application
NEXT_PUBLIC_APP_URL=https://callflows.de
NEXT_PUBLIC_ENVIRONMENT=production

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=callflows

# JWT Authentication
JWT_SECRET=your-secret-key

# SMTP Configuration for Email
SMTP_HOST=smtp.ionos.de
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@callflows.de
SMTP_PASS=your-email-password
SMTP_FROM="Callflows <your-email@callflows.de>"
CONTACT_EMAIL=kontakt@callflows.de

